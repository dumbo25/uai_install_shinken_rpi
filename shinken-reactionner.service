[Unit]
Description=Shinken Reactionner
After=syslog.target

[Service]
Type=forking
ExecStart=/usr/bin/shinken-reactionner -d -c /etc/shinken/daemons/reactionnerd.ini
KillMode=mixed
TimeoutStopSec=30
PIDFile=/var/run/shinken/reactionnerd.pid
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
