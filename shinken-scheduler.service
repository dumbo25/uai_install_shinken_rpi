[Unit]
Description=Shinken Scheduler
After=syslog.target

[Service]
Type=forking
ExecStart=/usr/bin/shinken-scheduler -d -c /etc/shinken/daemons/schedulerd.ini
KillMode=mixed
TimeoutStopSec=30
PIDFile=/var/run/shinken/schedulerd.pid
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
