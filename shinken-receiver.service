[Unit]
Description=Shinken Receiver
After=syslog.target

[Service]
Type=forking
ExecStart=/usr/bin/shinken-receiver -d -c /etc/shinken/daemons/receiverd.ini
KillMode=mixed
TimeoutStopSec=30
PIDFile=/var/run/shinken/receiverd.pid
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
